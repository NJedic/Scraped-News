<!-- Header/Navbar -->
	<header>
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded" id="navbar">
      <a class="navbar-brand" id="navbarHeader"></a>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <li class="nav-item dropdown" class="dropdownMenu" id="dropdownLi">
            <a class="nav-link" href="#" id="menu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            <i class="fa fa-bars fa-3x" aria-hidden="true"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-right" id="dropdownMenu" aria-labelledby="menu1">
              <a class="dropdown-item" href="/articles">Main</a>
              <a class="dropdown-item" href="/savedarticles">Favorites</a>
            </div>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <!-- Jumbotron -->
  <div class="jumbotron jumbotron-fluid" id="jumbotronContainer">
  	<div class="container">
  		<div class="row">
	  		<div class="col-md-8">
		    	<h1 class="display-3">Screen Rant Scrape</h1>
		    	<hr>
		    	<p class="lead">
		    		<form class="form-inline" method="GET" action="/scrape">
		   				<button type="submit" class="btn btn-secondary" id="scrapeButton">Scrape For Articles</button>
						</form>
					</p>
				</div>
				<div class="col-md-2">
					<img src="assets/images/boom-copy.png" alt="BOOM!" id="boom"></img>
				</div>
			</div>
  	</div>
	</div>

	<!-- Main Container -->
	<div class="container">
    {{#each Article}}
		<div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-sm-10">
            <p class="titles">
              <!-- Link Goes Here: -->
              <a href="{{this.link}}" target="_blank">
                <!-- Title Goes Here: -->
                {{this.title}}
              </a>
            </p>
          </div>
          <div class="col-sm-1 right">
            <form class="addToFavs" action="/markfav/{{this.id}}?_method=PUT" method="POST"> 
              <button type="submit" class="btn btn-secondary justify-content-end" id="{{this._id}}">Add To Favorites</button>
            </form>
          </div>
        </div>
      </div>
      <div class="card-block">
        <h4 class="card-title">
           <p>
           <!-- Author's Name Goes Here -->
            {{this.author}}
          </p>
          <p>
            <!-- Excerpt Goes Here -->
            {{this.excerpt}}
          </p>
        </h4>
      </div>
    {{/each}}
    </div>
	</div>